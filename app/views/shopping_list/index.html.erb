<div class="w-full">
  <div class="flex justify-between">
  <h1 class="font-bold text-4xl">Shopping List</h1>
  </div>
  <div class="grid grid-cols-1 md:grid-cols-2 gap-4 my-6">
  <div>Amount of food to buy: <%= @shopping_list.length %> items</div>
  <div>Total value of food needed: <%=number_to_currency( @shopping_list.map { |item| item[:price]}.sum )%></div>
  <div>Recipe: <%= link_to @recipe.name, recipe_path(@recipe.id), class: "underline text-blue-500" %></div>
  <div>Inventory: <%= link_to @inventory.name, inventory_path(@inventory.id), class: "underline text-blue-500" %></div>
  </div>



  <div class="not-prose relative bg-slate-50 rounded-xl overflow-hidden mt-4">
  <div class="relative rounded-xl overflow-auto">
  <div class="shadow-sm overflow-hidden my-3">
    <table class="border-collapse table-auto w-full text-sm">
  <thead>
    <tr>
      <th class="border-b font-medium pl-8 pt-0 border-teal-900 bg-slate-100"><%= link_to "Food", :sort => "food"%> </th>
      <th class="border-b font-medium pl-8  border-teal-900 bg-slate-100"><%= link_to "Quantity", :sort => "quantity"%> </th>
      <th class="border-b font-medium pl-8 border-teal-900 bg-slate-100"><%= link_to "Price", :sort => "price"%> </th>
    </tr>
  </thead>
  <tbody class="bg-white dark:bg-slate-800 text-center">
    <% @shopping_list.each do |food| %>
    <tr>
      <td class="border-b border-slate-200 dark:border-slate-600 p-4 pl-8 text-slate-500 dark:text-slate-400"><%= food[:name] %></td>
      <td class="border-b border-slate-200 dark:border-slate-600 p-4 pl-8 text-slate-500 dark:text-slate-400"><%= food[:quantity] %></td>
      <td class="border-b border-slate-200 dark:border-slate-600 p-4 pl-8 text-slate-500 dark:text-slate-400">  <%= number_to_currency(food[:price])  %></td>
    </tr>
    <% end %>
  </tbody>
  </table>
  </div>
</div><div class="absolute inset-0 pointer-events-none border border-black/5 rounded-xl dark:border-white/5"></div></div>
<% flash.each do |type, msg| %>
      <div class="alert alert-<%= type %>">
        <%= msg %>
      </div>
<% end %>
</div>

    <%= link_to recipe.name, recipe_path(recipe.id), class: "text-gray-900 font-bold text-xl mb-2" %>
    <%= button_to "Remove", recipe_path(recipe.id), method: :delete, class: "flex bg-transparent hover:bg-red-500 text-red-700 justify-center text-sm font-semibold hover:text-white p-1 w-20 border border-red-500 hover:border-transparent rounded"%>
  </div>

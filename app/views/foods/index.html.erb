<div class="w-full">
  <div class="flex justify-between">
  <h1 class="font-bold text-4xl">Food List</h1>
  <%= link_to "Add Food", new_food_path, class:"bg-teal-500 text-white font-bold py-2 px-4 rounded" %>
</div>
  <div class="not-prose relative bg-slate-50 rounded-xl overflow-hidden dark:bg-slate-800/25  mt-4">
  <div class="relative rounded-xl overflow-auto">
  <div class="shadow-sm overflow-hidden my-6">
    <table class="border-collapse table-auto w-full text-sm">
  <thead>
    <tr>
      <th class="border-b font-medium pl-8 pt-0 border-teal-900 bg-slate-100"><%= link_to "Food", :sort => "food"%> </th>
      <th class="border-b font-medium pl-8  border-teal-900 bg-slate-100"><%= link_to "Measurement unit", :sort => "measurement_unit"%> </th>
      <th class="border-b font-medium pl-8 border-teal-900 bg-slate-100"><%= link_to "Unit Price", :sort => "avg_ranking"%> </th>
      <th class="border-b font-medium pl-8 border-teal-900 bg-slate-100"> Actions </th>
    </tr>
  </thead>
  <tbody class="bg-white dark:bg-slate-800 text-center">
  <% @foods.each do |food| %>
  <tr>
    <td class="border-b border-slate-200 dark:border-slate-600 p-4 pl-8 text-slate-500 dark:text-slate-400"><%= link_to food.name, food_path(food.id) %></td>
    <td class="border-b border-slate-200 dark:border-slate-600 p-4 pl-8 text-slate-500 dark:text-slate-400"><%=food.measurement_unit %></td>
    <td class="border-b border-slate-200 dark:border-slate-600 p-4 pl-8 text-slate-500 dark:text-slate-400">  <%=food.price %></td>
    <td class="border-b border-slate-200 dark:border-slate-600 p-4 pl-8 text-slate-500 dark:text-slate-400">  <%= button_to "Delete", food_path(food.id), method: :delete, class:"bg-red-500 text-white font-bold py-2 px-4 rounded" %></td>
  </tr>
  <% end %>
  </tbody>
  </table>
  </div>
</div><div class="absolute inset-0 pointer-events-none border border-black/5 rounded-xl dark:border-white/5"></div></div>
<% flash.each do |type, msg| %>
      <div class="alert alert-<%= type %>">
        <%= msg %>
      </div>
    <% end %>
</div>

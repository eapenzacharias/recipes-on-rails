<div class="w-full">
  <header class="flex justify-between items-baseline">
    <h1 class="font-bold text-4xl">Your Inventories</h1>
    <% if user_signed_in? %>
      <%= link_to "New inventory", new_inventory_path, class: "text-sm px-4 py-2 border rounded hover:border-transparent hover:bg-green-200" %>
    <% end %>
  </header>
  <div class="mt-14">
    <% unless user_signed_in? %>
      <p class="border p-7 border-red-400 bg-red-200 font-medium">You need to sign in.</p>
    <% else %>
      <div class="flex flex-col gap-7"> 
        <% if !@inventories.empty? %>
          <% @inventories.each do |inventory| %>
            <div class="border p-7 font-bold text-xl flex justify-between items-baseline">
              <%= link_to inventory.name, inventory_path(inventory.id) , class: "hover:text-teal-700" %>
              <%= button_to "Delete", inventory_path(inventory.id), method: :delete, class: "text-sm px-4 py-2 leading-none border rounded hover:border-transparent hover:bg-red-200" %>
            </div>
          <% end %>
        <% else %>
          <p class="border p-7 border-yellow-400 bg-yellow-200 font-medium">You don't have any inventories.</p>
        <% end %>
      </div>
    <% end %>
  </div>
</div>

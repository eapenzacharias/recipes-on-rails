<div class="w-full">
  <h1 class="font-bold text-4xl">Your Inventories</h1>
  <div class="mt-14">
    <% if !user_signed_in? %>
        <p class="border p-7 border-red-400 bg-red-200 font-medium">You need to sign in.</p>
    <% else %>
      <div class="flex flex-col gap-7"> 
        <% if !@inventories.empty? %>
          <% @inventories.each do |inventory| %>
            <p class="border p-7 font-bold text-xl"><%= inventory.name %></p>
          <% end %>
        <% else %>
          <p class="border p-7 border-yellow-400 bg-yellow-200 font-medium">You don't have any inventories.</p>
        <% end %>
      </div>
    <% end %>
  </div>
</div>

<div class="w-full">
  <header class="flex justify-between items-baseline">
    <h1 class="font-bold text-4xl">
      <%= @inventory.name %>
    </h1>
    <%= link_to "Add food", inventory_foods_new_path(@inventory.id), class: "text-sm px-4 py-2 border rounded hover:border-transparent hover:bg-green-200" %>
  </header>
  <div class="not-prose relative bg-slate-50 rounded-xl overflow-hidden dark:bg-slate-800/25  mt-4">
    <div class="relative rounded-xl overflow-auto">
      <div class="shadow-sm overflow-hidden my-6">
        <table class="border-collapse table-auto w-full text-sm">
          <thead>
            <tr>
              <th class="border-b font-medium pl-8 pt-0 border-teal-900 bg-slate-100">Food</th>
              <th class="border-b font-medium pl-8  border-teal-900 bg-slate-100">Quantity</th>
              <th class="border-b font-medium pl-8 border-teal-900 bg-slate-100">Actions</th>
            </tr>
          </thead>
          <tbody class="bg-white dark:bg-slate-800 text-center">
            <% @inventory.inventory_foods.each do |item| %>
              <tr>
                <td class="border-b border-slate-200 dark:border-slate-600 p-4 pl-8 text-slate-500 dark:text-slate-400">
                  <%= item.food.name %>
                </td>
                <td class="border-b border-slate-200 dark:border-slate-600 p-4 pl-8 text-slate-500 dark:text-slate-400">
                  <%= "#{item.quantity} #{item.food.measurement_unit}" %>
                </td>
                <td class="border-b border-slate-200 dark:border-slate-600 p-4 pl-8 text-slate-500 dark:text-slate-400">  
                  <%= button_to "Delete", inventory_foods_path(@inventory.id, item.id), method: :delete, class:"bg-red-500 text-white font-bold py-2 px-4 rounded" %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
